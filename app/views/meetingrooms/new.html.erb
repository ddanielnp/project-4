<h1>New MeetingRoom</h1>

<div class="container">

  <%= form_for @new_meeting do |f| %>

  <div class="row">
    <div class='col-sm-6'>
      <div class="form-group">
        <p><%= f.label :Room_name %>:</p>
        <p><%= f.text_field :room_title, required: true %></p>
      </div>
    </div>
  </div>

  <div class="row">
    <div class='col-sm-6'>
      <div class="form-group">
        <p><%= f.label :occupancy %>:</p>
        <p><%= f.text_field :pax, required: true %></p>
      </div>
    </div>
  </div>

  <div class="row">
    <div class='col-sm-6'>
      <div class="form-group">
        <p><%= f.label :price_hour %>:</p>
        <p><%= f.number_field :price_hr, required: true, min: 0 %></p>
      </div>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Create now" %>
  </div>

  <% end %>
</div>
